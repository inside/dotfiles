# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.vim]
indent_size = 2

[.vimrc]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.js]
indent_size = 2

; Settings for https://github.com/maksimr/vim-jsbeautify
[**.js]
brace_style = expand
