[user]
    name = Yann Thomas-GÃ©rard
    email = inside@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
[core]
    pager = less
[alias]
    a = add
    d = diff
    dc = diff --cached
    e = edit
    g = grep
    ; Push the branch you are on to the remote
    p = push origin HEAD
    l = log
    lp = log -p
    s = status
    br = branch
    co = checkout
    ci = commit
    ca = commit -a
    caa = commit -a --amend
    ru = remote update
    ; Checkout branch name from master
    cob = "!f() {\
        if [ -z \"$1\" ];\
        then\
            echo \"Usage: git cob branch_name\";\
            return;\
        fi;\
        git checkout -b "$1" origin/master;\
    }; f"
    ; Edit modified file
    edit = "!vim `git diff --name-only`"
    staged = "!vim `git diff --name-only --cached`"
    all = "!vim `git diff --name-only HEAD`"
    flog = log --name-status
    jls = jira list
[rerere]
    enabled = true
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
